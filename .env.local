# Application
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-a-secure-random-string
NEXTAUTH_JWT_SECRET=replace-with-a-secure-random-string

# Google OAuth (optional)
GOOGLE_CLIENT_ID=replace-with-google-client-id
GOOGLE_CLIENT_SECRET=replace-with-google-client-secret

# API Routes
API_ROUTE_SECRET=replace-with-a-secure-random-string

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# Supabase
NEXT_PUBLIC_SUPABASE_URL=replace-with-your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=replace-with-your-supabase-anon-key
