# OMNIVID Backend Configuration

# Application
APP_NAME=OMNIVID
APP_VERSION=0.1.0
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000

# Remotion Configuration
REMOTION_ROOT=C:/path/to/your/remotion/project
REMOTION_COMPOSITION_ID=MyComposition
NODE_PATH=node
NPX_PATH=npx

# Rendering Defaults
DEFAULT_WIDTH=1920
DEFAULT_HEIGHT=1080
DEFAULT_FPS=30
DEFAULT_QUALITY=high
DEFAULT_FORMAT=mp4
RENDER_TIMEOUT=600

# Storage Paths
OUTPUT_DIR=./output
ASSETS_DIR=./assets
TEMP_DIR=./tmp

# Celery & Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security (optional)
API_KEY=
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
