{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "out/**"
      ],
      "cache": true,
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "public/**/*",
        "next.config.js",
        "package.json"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"]
    }
  }
}